<Page x:Class="coach_search.Views.TutorProfileView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:coach_search.Views"
             mc:Ignorable="d"
              d:DesignHeight="450" d:DesignWidth="800"
              Loaded="Page_loaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <Grid Margin="40">
        <ScrollViewer>
            <StackPanel Width="600">

                <TextBlock Text="Личный кабинет" Style="{StaticResource TitleText}" />

                <!-- Фото -->
                <StackPanel Orientation="Horizontal" Margin="0,20">
                    <Image Source="{Binding PhotoPath}" Width="120" Height="120"
           Margin="0,0,20,0" Stretch="UniformToFill"/>
                    <Button Content="Выбрать фото"
            Command="{Binding UploadPhotoCommand}"
            Style="{StaticResource AccentButton}"
            Visibility="{Binding SaveCancelButtonVisibility}" />
                </StackPanel>

                <!-- Остальные поля -->
                <StackPanel Margin="0,20">
                    <TextBlock Text="ФИО" Style="{StaticResource LabelText}" />
                    <TextBox Text="{Binding FullName, Mode=TwoWay}"
             Style="{StaticResource InputBox}"
             IsReadOnly="{Binding IsReadOnly}" />

                    <TextBlock Text="Телефон" Style="{StaticResource LabelText}" />
                    <TextBox Text="{Binding Phone, Mode=TwoWay}"
             Style="{StaticResource InputBox}"
             IsReadOnly="{Binding IsReadOnly}" />

                    <TextBlock Text="Email" Style="{StaticResource LabelText}" />
                    <TextBox Text="{Binding Email, Mode=TwoWay}"
             Style="{StaticResource InputBox}"
             IsReadOnly="{Binding IsReadOnly}" />
                </StackPanel>

                <!-- Tutor section -->
                <StackPanel Margin="0,10" Visibility="{Binding TutorSectionVisibility}">
                    <TextBlock Text="Описание" Style="{StaticResource LabelText}" />
                    <TextBox Text="{Binding Description, Mode=TwoWay}" 
             Style="{StaticResource InputBox}"
             AcceptsReturn="True" Height="100"
             IsReadOnly="{Binding IsReadOnly}" />

                    <StackPanel Orientation="Horizontal">
                        <StackPanel Width="300">
                            <TextBlock Text="Предмет" Style="{StaticResource LabelText}" />
                            <TextBox Text="{Binding Subject, Mode=TwoWay}"
                     Style="{StaticResource InputBox}"
                     IsReadOnly="{Binding IsReadOnly}" />
                        </StackPanel>

                        <StackPanel Width="200" Margin="20,0">
                            <TextBlock Text="Цена за час" Style="{StaticResource LabelText}" />
                            <TextBox Text="{Binding PricePerHour, Mode=TwoWay}"
                     Style="{StaticResource InputBox}"
                     IsReadOnly="{Binding IsReadOnly}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,20">
                    <Button Content="Редактировать" Command="{Binding EditCommand}"
            Style="{StaticResource AccentButton}"
            Visibility="{Binding EditButtonVisibility}" />
                    <Button Content="Сохранить" Command="{Binding SaveCommand}"
            Style="{StaticResource AccentButton}"
            Visibility="{Binding SaveCancelButtonVisibility}" Margin="10,0"/>
                    <Button Content="Отменить" Command="{Binding CancelCommand}"
            Style="{StaticResource MenuButton}"
            Visibility="{Binding SaveCancelButtonVisibility}" Margin="10,0"/>
                </StackPanel>

                <!-- Блок заявок на запись -->
                <StackPanel Margin="0,20" Visibility="{Binding PendingAppointmentsVisibility}">
                    <TextBlock Text="Заявки на запись" Style="{StaticResource TitleText}" Margin="0,0,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding PendingAppointments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5" Padding="15" BorderBrush="#E6C4A8" BorderThickness="2" CornerRadius="8" Background="#FFF7F2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Student.FullName, StringFormat=Студент: {0}}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                                        <TextBlock Text="{Binding Student.Email}" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                                        <TextBlock>
                                            <Run Text="День: "/>
                                            <Run Text="{Binding DayOfWeekText}"/>
                                            <Run Text=", Время: "/>
                                            <Run Text="{Binding Time}"/>
                                        </TextBlock>
                                        <TextBlock Text="{Binding Comment}" TextWrapping="Wrap" Margin="0,5,0,10" FontStyle="Italic"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Принять" Width="100" Margin="0,0,10,0" 
                                                    Style="{StaticResource AccentButton}"
                                                    Command="{Binding DataContext.AcceptAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>
                                            <Button Content="Отклонить" Width="100"
                                                    Style="{StaticResource MenuButton}"
                                                    Command="{Binding DataContext.RejectAppointmentCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Блок отзывов -->
                <StackPanel Margin="0,20" Visibility="{Binding ReviewsVisibility}">
                    <TextBlock Text="Ваши отзывы" Style="{StaticResource TitleText}"/>

                    <ItemsControl ItemsSource="{Binding Reviews}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,5" Padding="10" BorderThickness="1" CornerRadius="8"
        BorderBrush="LightGray">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ClientName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Rating, StringFormat=Оценка: {0}}"
                   Foreground="DarkGoldenrod"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <ContentControl Content = "{Binding Schedule}"></ContentControl>
            </StackPanel>

        </ScrollViewer>
        
    </Grid>

</Page>
