<Window x:Class="coach_search.Views.AdminEditTutorWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
mc:Ignorable="d"
Title="Редактирование репетитора"
Height="600"
Width="550"
WindowStyle="None"
ResizeMode="NoResize"
WindowStartupLocation="CenterScreen"
Margin="100 100 0 0">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#FFF7F2"
        BorderBrush="#E6C4A8"
        BorderThickness="2"
        CornerRadius="10"
        Padding="20">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Редактирование репетитора"
                       Style="{StaticResource TitleText}"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

                <TextBlock Text="ФИО" Style="{StaticResource LabelText}"/>
                <TextBox Text="{Binding FullName, Mode=TwoWay}"
                     Style="{StaticResource InputBox}" Margin="0,0,0,10"/>

                <TextBlock Text="Email" Style="{StaticResource LabelText}"/>
                <TextBox Text="{Binding Email, Mode=TwoWay}"
                     Style="{StaticResource InputBox}" Margin="0,0,0,10"/>

                <TextBlock Text="Телефон" Style="{StaticResource LabelText}"/>
                <TextBox Text="{Binding Phone, Mode=TwoWay}"
                     Style="{StaticResource InputBox}" Margin="0,0,0,10"/>

                <TextBlock Text="Описание" Style="{StaticResource LabelText}"/>
                <TextBox Text="{Binding TutorInfo.Description, Mode=TwoWay}"
                     Style="{StaticResource InputBox}"
                     AcceptsReturn="True" Height="100" Margin="0,0,0,10"/>

                <TextBlock Text="Предмет" Style="{StaticResource LabelText}"/>
                <TextBox Text="{Binding TutorInfo.Subject, Mode=TwoWay}"
                     Style="{StaticResource InputBox}" Margin="0,0,0,10"/>

                <TextBlock Text="Цена за час" Style="{StaticResource LabelText}"/>
                <TextBox Text="{Binding TutorInfo.PricePerHour, Mode=TwoWay}"
                     Style="{StaticResource InputBox}" Margin="0,0,0,10"/>

                <CheckBox Content="Заблокирован" IsChecked="{Binding IsBlocked}" Margin="0,10"/>

                <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                    <Button Content="Сохранить" Width="120" Height="35"
                        Style="{StaticResource AccentButton}"
                        Command="{Binding SaveCommand}" Margin="0,0,10,0"/>
                    <Button Content="Отмена" Width="120" Height="55"
                        Style="{StaticResource MenuButton}"
                        Command="{Binding CancelCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>