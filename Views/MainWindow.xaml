<Window x:Class="coach_search.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:coach_search.Views"
        xmlns:vm="clr-namespace:coach_search.ViewModels"
        xmlns:v="clr-namespace:coach_search.Views"
        Title="TutorFinder"
        WindowState="Maximized"
        Background="#FFF7F2">

    <!-- Объединённые ресурсы -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- DataTemplate для HomePageViewModel -->
            <DataTemplate DataType="{x:Type vm:HomePageViewModel}">
                <v:HomePage />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:TutorProfileViewModel}">
                <v:TutorProfileView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ClientProfileViewModel}">
                <v:ClientProfileView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:AdminPanelViewModel}">
                <v:AdminPanelView />
            </DataTemplate>

        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>

        <Border Background="#E6C4A8"
        DockPanel.Dock="Top"
        Height="60"
        Padding="20,0">

            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ЛОГОТИП -->
                <TextBlock Text="TutorFinder"
                   VerticalAlignment="Center"
                   FontSize="26"
                   FontWeight="Bold"
                   FontFamily="Segoe UI"
                   Foreground="#5A3E2B"
                   Grid.Column="0">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="6"
                                  ShadowDepth="1"
                                  Color="#000000"
                                  Opacity="0.25"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- КНОПКИ -->
                <StackPanel Orientation="Horizontal"
                    Grid.Column="2"
                    VerticalAlignment="Center">

                    <Button Content="Главная"
                    Command="{Binding NavigateHomeCommand}"
                    Style="{StaticResource MenuButton}" />

                    <Button Content="Личный кабинет"
                    Command="{Binding NavigateProfileCommand}"
                    Visibility="{Binding ProfileButtonVisibility}"
                    Style="{StaticResource MenuButton}" />

                    <Button Content="Админ"
                    Command="{Binding NavigateAdminCommand}"
                    Visibility="{Binding AdminButtonVisibility}"
                    Style="{StaticResource MenuButton}" />

                    <Button Content="Выход"
                    Command="{Binding LogoutCommand}"
                    Style="{StaticResource MenuButton}" />
                </StackPanel>
            </Grid>
        </Border>


        <!-- Область для отображения страниц -->
        <Frame x:Name="MainFrame" Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden" />

    </DockPanel>

</Window>
