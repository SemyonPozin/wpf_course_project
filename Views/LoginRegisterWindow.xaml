<Window x:Class="coach_search.Views.LoginRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TutorFinder — Вход / Регистрация"
        Height="500" Width="700"
        Background="#FFF7F2">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/coach_search;component/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Margin="20">

        <TabControl>
            <!-- ВХОД -->
            <TabItem Header="Вход">
                <StackPanel Margin="40">

                    <TextBlock Text="Email:" Style="{StaticResource LabelText}"/>
                    <TextBox Text="{Binding LoginEmail, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputBox}" />

                    <TextBlock Text="Пароль:" Style="{StaticResource LabelText}" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="LoginPasswordBox"
                                 PasswordChanged="LoginPasswordBox_OnChanged"
                                 Style="{StaticResource InputPassword}" />

                    <Button Content="Войти"
                            Margin="0,20,0,0" Height="40"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource AccentButton}" />

                    <TextBlock Text="{Binding LoginError}" Foreground="Red" FontSize="14" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>

            <!-- РЕГИСТРАЦИЯ -->
            <TabItem Header="Регистрация">
                <ScrollViewer>
                    <StackPanel Margin="40">

                        <TextBlock Text="Имя:" Style="{StaticResource LabelText}"/>
                        <TextBox Text="{Binding RegFullName}" Style="{StaticResource InputBox}" />

                        <TextBlock Text="Email:" Style="{StaticResource LabelText}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding RegEmail}" Style="{StaticResource InputBox}" />

                        <TextBlock Text="Телефон:" Style="{StaticResource LabelText}" Margin="0,10,0,0"/>
                        <TextBox Text="{Binding RegPhone}" Style="{StaticResource InputBox}" />

                        <TextBlock Text="Тип пользователя:" Style="{StaticResource LabelText}" Margin="0,10,0,0"/>
                        <ComboBox SelectedValue="{Binding RegRole}"
                             SelectedValuePath="Content"
                             Style="{StaticResource InputCombo}">
                            <ComboBoxItem Content="Клиент"/>
                            <ComboBoxItem Content="Репетитор"/>
                        </ComboBox>

                        <TextBlock Text="Пароль:" Style="{StaticResource LabelText}" Margin="0,10,0,0"/>
                        <PasswordBox x:Name="RegPasswordBox"
                                     PasswordChanged="RegPasswordBox_OnChanged"
                                     Style="{StaticResource InputPassword}" />

                        <Button Content="Зарегистрироваться"
                                Height="40" Margin="0,20,0,0"
                                Command="{Binding RegisterCommand}"
                                Style="{StaticResource AccentButton}" />

                        <TextBlock Text="{Binding RegError}" Foreground="Red" FontSize="14" Margin="0,10,0,0"/>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
