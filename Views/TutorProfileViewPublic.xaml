<Window x:Class="coach_search.Views.TutorProfileViewPublic" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:coach_search.Views" mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="900"
        WindowState="Maximized"
        Title="Профиль репетитора"
        WindowStyle="None" ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Loaded>Window_Loaded</Window.Loaded>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#FFF7F2">
        <StackPanel Margin="20" Width="850">

            <!-- Кнопка назад -->
            <Button Width="120" Height="40" HorizontalAlignment="Left" Margin="0,0,0,10" Command="{Binding BackCommand}" Style="{StaticResource AccentButton}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="←" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Назад" FontSize="14" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Заголовок -->
            <TextBlock Text="Профиль репетитора" Style="{StaticResource TitleText}" />



            <!--Основная информация-->
                <StackPanel Orientation = "Horizontal" Margin = "0,20" >
                    <Ellipse Width = "120" Height = "120" Stroke = "#E6C4A8" StrokeThickness = "3" >
                        <Ellipse.Fill >
                            <ImageBrush ImageSource = "{Binding PhotoPath}" Stretch = "UniformToFill" />
                        </Ellipse.Fill >
                    </Ellipse >

                    <StackPanel Margin = "20,0" >
                        <TextBlock Text = "{Binding FullName}" FontSize = "22" FontWeight = "Bold" />
                        <TextBlock Text = "{Binding Subject}" FontSize = "18" />
                        <TextBlock >
                    <Run Text = "Цена: " />
                    <Run Text = "{Binding PricePerHour}" />
                    <Run Text = " ₽/час" />
                        </TextBlock >
                        <TextBlock Text = "{Binding Phone}" />
                        <TextBlock Text = "{Binding Email}" />
                    </StackPanel >
                </StackPanel >

                <!--Описание-->
                    <StackPanel Visibility="{Binding DescriptionVisibility}">
                        <TextBlock Text = "Описание" Style = "{StaticResource SubtitleText}" Margin = "0,20,0,5" />
                        <TextBlock Text = "{Binding Description}" TextWrapping = "Wrap" />
                    </StackPanel>

                    <ContentControl Content="{Binding Schedule}"></ContentControl>


                    <!-- Добавить отзыв -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Оставить отзыв" Style="{StaticResource SubtitleText}" Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock Text="Оценка:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Width="60" SelectedValue="{Binding NewReviewRating, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="1" />
                        <ComboBoxItem Content="2" />
                        <ComboBoxItem Content="3" />
                        <ComboBoxItem Content="4" />
                        <ComboBoxItem Content="5" />
                    </ComboBox>
                </StackPanel>

                <TextBox Width="600" Height="60" TextWrapping="Wrap" Margin="0 -25 0 0"
         Text="{Binding NewReviewText, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Добавить отзыв"
        Width="150"
        Margin="0,5,0,0"
        Command="{Binding AddReviewCommand}"/>
            </StackPanel>

            <!-- Отзывы -->
            <StackPanel Visibility="{Binding ReviewsVisibility}">
                <TextBlock Text="Отзывы" Style="{StaticResource SubtitleText}" Margin="0,30,0,10"/>

                <ItemsControl ItemsSource="{Binding Reviews}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,10" Padding="15" BorderBrush="#E6C4A8" BorderThickness="2" CornerRadius="10" Background="#FFF7F2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Фото пользователя -->
                                    <Ellipse Grid.Column="0" Width="60" Height="60" Margin="0,0,15,0" Cursor="Hand">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding Author.PhotoPath}" Stretch="UniformToFill"/>
                                        </Ellipse.Fill>
                                        <Ellipse.InputBindings>
                                            <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.ViewUserProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Author}"/>
                                        </Ellipse.InputBindings>
                                    </Ellipse>

                                    <!-- Информация об отзыве -->
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <TextBlock Text="{Binding Author.FullName}" FontWeight="Bold" FontSize="16" Margin="0,0,10,0" Cursor="Hand">
                                                <TextBlock.InputBindings>
                                                    <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.ViewUserProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Author}"/>
                                                </TextBlock.InputBindings>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Author.Email}" FontSize="12" Foreground="Gray" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        
                                        <!-- Рейтинг звездочками -->
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock FontSize="18" Foreground="DarkGoldenrod">
                                                <Run Text="★"/>
                                                <Run Text="★"/>
                                                <Run Text="★"/>
                                                <Run Text="★"/>
                                                <Run Text="★"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Rating, StringFormat=({0}/5)}" FontSize="14" Margin="5,0,0,0" VerticalAlignment="Center" Foreground="DarkGoldenrod" FontWeight="Bold"/>
                                        </StackPanel>

                                        <!-- Текст отзыва -->
                                        <TextBlock Text="{Binding Text}" TextWrapping="Wrap" FontSize="14" LineHeight="20"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>