<Window x:Class="coach_search.Views.TutorProfileViewPublic" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:coach_search.Views" mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="900"
        WindowState="Maximized"
        Title="Профиль репетитора">

    <Window.Resources>
        <ResourceDictionary Source="/Styles.xaml"/>
    </Window.Resources>

    <Window.Loaded>Window_Loaded</Window.Loaded>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Width="850">

            <!-- Кнопка назад -->
            <Button Content="Назад" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10" Command="{Binding BackCommand}" Style="{StaticResource AccentButton}"/>

            <!-- Заголовок -->
            <TextBlock Text="Профиль репетитора" Style="{StaticResource TitleText}" />



            <!--Основная информация-->
                <StackPanel Orientation = "Horizontal" Margin = "0,20" >
                    <Ellipse Width = "120" Height = "120" Stroke = "#E6C4A8" StrokeThickness = "3" >
                        <Ellipse.Fill >
                            <ImageBrush ImageSource = "{Binding PhotoPath}" Stretch = "UniformToFill" />
                        </Ellipse.Fill >
                    </Ellipse >

                    <StackPanel Margin = "20,0" >
                        <TextBlock Text = "{Binding FullName}" FontSize = "22" FontWeight = "Bold" />
                        <TextBlock Text = "{Binding Subject}" FontSize = "18" />
                        <TextBlock >
                    <Run Text = "Цена: " />
                    <Run Text = "{Binding PricePerHour}" />
                    <Run Text = " ₽/час" />
                        </TextBlock >
                        <TextBlock Text = "{Binding Phone}" />
                        <TextBlock Text = "{Binding Email}" />
                    </StackPanel >
                </StackPanel >

                <!--Описание-->
                    <TextBlock Text = "Описание" Style = "{StaticResource SubtitleText}" Margin = "0,20,0,5" />
                    <TextBlock Text = "{Binding Description}" TextWrapping = "Wrap" />

                    <ContentControl Content="{Binding Schedule}"></ContentControl>


                    <!-- Добавить отзыв -->
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Оставить отзыв" Style="{StaticResource SubtitleText}" Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock Text="Оценка:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Width="60" SelectedValue="{Binding NewReviewRating, UpdateSourceTrigger=PropertyChanged}">
                        <ComboBoxItem Content="1" />
                        <ComboBoxItem Content="2" />
                        <ComboBoxItem Content="3" />
                        <ComboBoxItem Content="4" />
                        <ComboBoxItem Content="5" />
                    </ComboBox>
                </StackPanel>

                <TextBox Width="600" Height="60" TextWrapping="Wrap" Margin="0 -25 0 0"
         Text="{Binding NewReviewText, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Добавить отзыв"
        Width="150"
        Margin="0,5,0,0"
        Command="{Binding AddReviewCommand}"/>
            </StackPanel>

            <!-- Отзывы -->
            <TextBlock Text="Отзывы" Style="{StaticResource SubtitleText}" Margin="0,30,0,10"/>

            <ItemsControl ItemsSource="{Binding Reviews}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5" Padding="10" BorderBrush="LightGray" BorderThickness="1" CornerRadius="8">
                            <StackPanel>
                                <TextBlock Text="{Binding ClientName}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Rating, StringFormat=Оценка: {0}}" Foreground="DarkGoldenrod"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</Window>